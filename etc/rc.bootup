function rescue_detect_keypress()
{
	$timeout=9;
	echo "\n";
	echo "[ Press S to start installer... ]\n";
	echo "Timeout (seconds): {$timeout}";
	$key = null;
	exec("/bin/stty erase " . chr(8));

	while(!in_array($key, array("s", "S")))
	{
	        echo chr(8) . "{$timeout}";
	        `/bin/stty -icanon min 0 time 25`;
	        $key = trim(`KEY=\`dd count=1 2>/dev/null\`; echo \$KEY`);
	        `/bin/stty icanon`;
	        $timeout--;
	        if ($timeout == 0)
				break;
	}

	if (in_array($key, array("s", "S")))
	{
		putenv("TERM=cons25");
		echo "\n\nStarting installer...\n";
		passthru("/usr/bin/env TERM=cons25 /bin/tcsh -c /scripts/lua_installer");

		if(file_exists("/tmp/install_complete"))
		{
			passthru("/etc/rc.reboot");
			exit;
		}
	}
}

