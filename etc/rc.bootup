function set_password()
{
	if(file_exists("/etc/nuclewall/password_init") and $g['platform'] == 'pfSense')
	{
		$success = false;
		$fp = fopen('php://stdin', 'r');

		echo "\nSet your administrator password for Web UI and SSH access.\n";
		echo "You can change your password later.\n";

		do
		{
			echo "\nEnter a password for administrator and press <ENTER>:\n> ";
			$password = chop(fgets($fp));

			if($password != '')
			{
				echo "Your password is: '{$password}' . Proceed? [y|n]\n> ";
				$key = chop(fgets($fp));

				if(strtolower($key) == "y")
				{
					$admin_user =& getUserEntryByUID(0);

					if (!$admin_user)
					{
						$admin_user = array();
						$admin_user['uid'] = 0;

						if (!is_array($config['system']['user']))
							$config['system']['user'] = array();

						$config['system']['user'][] = $admin_user;
					}

					$admin_user['name'] = "admin";
					$admin_user['scope'] = "system";
					$admin_user['priv'] = array("user-shell-access");

					local_user_set_password($admin_user, $password);
					local_user_set($admin_user);
					write_config("New admin password is set");

					$success = true;
					system("rm /etc/nuclewall/password_init");
					echo "New administrator password is set.\n\n";
					echo "Use 'admin' username to login Web UI.\n";
					echo "Use 'root' username to login SSH.\n\n";
					echo "Press <ENTER> to continue.";
					fgets($fp);
					exit;
				}
			}
		}while(!$success);
	}
}

